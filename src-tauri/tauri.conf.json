{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Neural OS",
  "version": "0.1.0",
  "identifier": "com.neural.os",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:desktop"
  },
  "app": {
    "windows": [
      {
        "title": "Neural OS",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "resources": [
      "../server.mjs",
      "sidecar/server.bundle.cjs",
      "binaries/neural-os-node-aarch64-apple-darwin",
      "binaries/neural-os-node-x86_64-apple-darwin"
    ],
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
